<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.wxx.oauth2.dao.UserMapper">
    <resultMap id="username" type="cn.wxx.oauth2.entity.UserVoDetailEntity">
        <result property="userId" column="user_id" />
        <result property="username" column="username" />
        <result property="password" column="password" />

        <collection property="roles" javaType="List" ofType="cn.wxx.oauth2.entity.UserRolesEntity">
            <result property="roleId" column="role_id" />
            <result property="userId" column="user_id" />
            <result property="roles" column="roles" />
        </collection>

    </resultMap>

    <select id="getByUsername" resultType="cn.wxx.oauth2.entity.UserVoDetailEntity" parameterType="string">
        SELECT
            user_id AS userId,
            username,
            password
        FROM
        USER
        WHERE
            username = 'duanyu'
    </select>
</mapper>